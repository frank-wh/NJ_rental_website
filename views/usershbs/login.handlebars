<article id="userloginDiv">
    <form action="/users/login" id="usersLoginForm" method="POST">
        <div class="form-group">
            <label for="name" class="form-label"><i class="fas fa-file-signature mr-2"></i>Username: </label>
            <input class="form-control" type="text" name="username" id="name" placeholder="Username" maxlength="16" />
        </div>
        <div class="form-group">
            <label for="pword" class="form-label"><i class="fas fa-key mr-2"></i>Password: </label>
            <input class="form-control" type="password" name="password" id="pword" placeholder="Password" maxlength="16" />
        </div>
        <div>
            <button class="btn btn-lg btn-success btn-block" type="submit"><i class="fas fa-sign-in-alt mr-2"></i>Login</button>
        </div>
    </form>
    <div id="userloginmessage"><p>Not registered? <a href="/users/new">Create an account!</a></p></div>
    <div>
        <div id="loginError"></div>
        <div id="loginErrorList">
        {{#if hasErrors}}
            {{#each error}}
            <div>{{this}}</div>
            {{/each}}
        {{/if}}
        </div>
    </div>
</article>