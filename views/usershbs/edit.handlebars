<article class="container-fluid">

    <form action="/users/{{user._id}}" id="usersEditForm" method="POST">
        <input type="hidden" name="_method" value="PATCH" />
        <div class="alert alert-info">
            <strong>Note:</strong> Password Format: 1: only letters, numbers and underscores;
            2: at least six letters; 3: at least one uppercase letter (A-Z)
        </div>

        <div class="form-group">
            <label for="pw">New Password: </label>
            <input class="form-control" type="password" name="password" id="pw" placeholder="Password">
        </div>
        <div class="form-group">
            <label for="pw2">Confirm Password: </label>
            <input class="form-control" type="password" id="pw2" placeholder="Confirm Password">
        </div>

        <div class="form-group">
            <label for="mail">Email: </label>
            <input class="form-control" type="email" name="email" id="mail" placeholder="username@example.com">
        </div>

        <div class="form-group">
            <label for="phoneNum">Phone Number: </label>
            <input class="form-control" type="tel" name="phoneNumber" id="phoneNum" placeholder="e.g. 123-456-7890"
                   pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}">
        </div>
        <div class="alert alert-info">
            <strong>Note:</strong> Phone number format: xxx-xxx-xxxx
        </div>
        <div class="alert alert-danger" id="pwError" hidden></div>

        <br>
        <div>
            <button class="btn btn-dark" type="submit">Change your information</button>
            <button class="btn btn-dark" type="reset">Clear Form</button>
            <a class="btn btn-dark" href="/users/{{user._id}}">Go Back</a>
        </div>
    </form>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="/public/js/userseditform.js"></script>
</article>
