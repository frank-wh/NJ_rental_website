<article>
    <a href="/users/{{user._id}}">Back to your own page</a>
    <form action="/users/{{user._id}}" id="usersEditForm" method="POST">
        <input type="hidden" name="_method" value="PATCH" />
        <div>
            <p>note: your password must contain 1: only letters, numbers and underscores;
                2: at least six letters; 3: at least one uppercase letter (A-Z)</p>
            <label for="pw">New Password: </label>
            <input type="password" name="password" id="pw" placeholder="Password">

            <label for="pw2">Confirm Password: </label>
            <input type="password" id="pw2" placeholder="Confirm Password">

            <div id="pwError" hidden></div>
        </div>
        <br>
        <div>
            <label for="mail">Email: </label>
            <input type="email" name="email" id="mail" placeholder="username@example.com">
        </div>
        <br>
        <div>
            <label for="phoneNum">Phone Number: </label>
            <input type="tel" name="phoneNumber" id="phoneNum" placeholder="e.g. 123-456-7890" 
                    pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}">
        </div>
        <br>
        <div>
            <button type="submit">Change your information</button>
            <button type="reset">Clear Form</button>
        </div>
    </form>
    <script src="/public/js/userseditform.js"></script>
</article>
