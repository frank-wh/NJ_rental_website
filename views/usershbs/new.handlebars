<article id="usernewDiv">
    <form action="/users/new" id="usersNewForm" method="POST">
        <div class="form-group">
            <label for="username"><i class="fas fa-file-signature mr-2"></i>Username:<span class="requiredfield">*</span></label>
            <input type="text" class="form-control" name="username" id="username" aria-describedby="usernewnameHelp" placeholder="e.g. John Doe" value="{{newUser.username}}" maxlength="16"/>
            <small id="usernewnameHelp" class="form-text text-muted">1. username couldn't be changed; 2. must contain 6-16 characters</small>
        </div>
        <div class="form-group">
            <label for="password"><i class="fas fa-lock mr-2"></i></i>Password:<span class="requiredfield">*</span></label>
            <input type="password" class="form-control" name="password" id="password" placeholder="e.g. John_Doe_123" maxlength="16"/>
            
            <label for="password2"><i class="fas fa-lock mr-2"></i>Confirm Password:<span class="requiredfield">*</span></label>
            <input type="password" class="form-control" id="password2" aria-describedby="usernewpwHelp" placeholder="Please Enter Again" maxlength="16"/>
            <small id="usernewpwHelp" class="form-text text-muted">1. different from username; 2. only letters, numbers and underscores; 3. must contain 6-16 letters; 4. at least one uppercase letter</small>
        </div>
        <div class="form-group">
            <label for="email"><i class="fas fa-envelope mr-2"></i>Email:<span class="requiredfield">*</span></label>
            <input type="email" class="form-control" name="email" id="email" placeholder="username@example.com" value="{{newUser.email}}"/>
        </div>
        <fieldset class="form-group">
            <legend class="col-form-label"><i class="fas fa-phone-alt mr-2"></i>Phone Number:<span class="requiredfield">*</span></legend>
            <div id="userphoneDiv">
                <label><input type="hidden" name="phoneNumber" id="phoneNumber" /></label>
                
                <label for="phoneNumberPart1">(+1)</label>
                <input id="phoneNumberPart1" class="phoneNumber phoneNumber3 form-control" type="text" maxlength="3" value="{{phone.[0]}}" onkeypress='return event.charCode >= 48 && event.charCode <= 57'/>
                
                <label for="phoneNumberPart2">-</label>
                <input id="phoneNumberPart2" class="phoneNumber phoneNumber3 form-control" type="text" maxlength="3" value="{{phone.[1]}}" onkeypress='return event.charCode >= 48 && event.charCode <= 57'/>     
                
                <label for="phoneNumberPart3">-</label>
                <input id="phoneNumberPart3" class="phoneNumber form-control" type="text" maxlength="4" value="{{phone.[2]}}" onkeypress='return event.charCode >= 48 && event.charCode <= 57'/>
            </div>
        </fieldset>
        <div>
            <button class="btn btn-sm btn-success" type="submit">Create New Account</button>
            <button class="btn btn-sm btn-warning" type="reset">Reset</button>
        </div>
    </form>
    <div class="userErrorDiv">
        <div id="usernameError"></div>
        <div id="passwordError"></div>
        <div id="emailError"></div>
        <div id="phoneNumberError"></div>
        <div id="usersNewFormError">
        {{#if hasErrors}}
            {{#each errors}}
            <div>{{this}}</div>
            {{/each}}
        {{/if}}
        </div>
    </div>
</article>